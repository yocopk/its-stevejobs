#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/python" ]; then
  exec "$basedir/python"  "$basedir/../clang-format/bin/git-clang-format" "$@"
else 
  exec python  "$basedir/../clang-format/bin/git-clang-format" "$@"
fi
